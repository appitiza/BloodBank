<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_semi_padding"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="1dp"
    card_view:cardMaxElevation="2dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/default_semi_padding">

        <ImageView
            android:layout_width="@dimen/defaultimage_size"
            android:layout_height="@dimen/defaultimage_size"
            android:src="@drawable/splash_bg"
            android:contentDescription="@string/app_name" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/default_semi_padding">

            <net.appitiza.android.lifedrop.Views.CustomTextview
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yes"
                android:textStyle="bold"
                android:fontFamily="@font/helvatica"/>

            <net.appitiza.android.lifedrop.Views.CustomTextview
                android:id="@+id/tv_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/default_padding"
                android:text="@string/yes"
                android:fontFamily="@font/helvatica"/>

            <net.appitiza.android.lifedrop.Views.CustomTextview
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:text="@string/yes"
                android:visibility="gone"
                android:fontFamily="@font/helvatica"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>