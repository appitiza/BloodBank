<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_bg"
    android:orientation="vertical"
    android:padding="@dimen/default_padding"
    tools:context=".ui.activities.SplashActivity">

    <net.appitiza.android.lifedrop.Views.CustomTextview
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:padding="@dimen/default_semi_padding"
        android:text="@string/register"
        android:textColor="@color/text_color"
        android:fontFamily="@font/helvatica"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:orientation="vertical"
            android:padding="@dimen/default_semi_padding">


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_padding">

                <EditText
                    android:id="@+id/et_firstname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_padding"
                    android:background="@drawable/et_bg"
                    android:hint="@string/first_name"
                    android:inputType="textCapWords"
                    android:maxLength="15"
                    android:maxLines="1"
                    android:padding="@dimen/default_semi_padding"
                    android:textColorHint="@color/et_hint_color" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_padding"
                android:visibility="gone">

                <EditText
                    android:id="@+id/et_lastname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/et_bg"
                    android:hint="@string/last_name"
                    android:inputType="textPersonName"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:padding="@dimen/default_semi_padding"
                    android:textColorHint="@color/et_hint_color" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_padding">

                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_padding"
                    android:background="@drawable/et_bg"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:padding="@dimen/default_semi_padding"
                    android:textColorHint="@color/et_hint_color" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_padding">

                <EditText
                    android:id="@+id/et_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/et_bg"
                    android:hint="@string/mobile"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:padding="@dimen/default_semi_padding"
                    android:textColorHint="@color/et_hint_color" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_padding">

                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/et_bg"
                    android:hint="@string/Password"
                    android:inputType="textPassword"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:padding="@dimen/default_semi_padding"
                    android:textColorHint="@color/et_hint_color" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_padding"
                android:visibility="gone">

                <EditText
                    android:id="@+id/et_confirmpassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/et_bg"
                    android:hint="@string/confirm_password"
                    android:inputType="textPassword"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:padding="@dimen/default_semi_padding"
                    android:textColorHint="@color/et_hint_color" />
            </android.support.design.widget.TextInputLayout>

            <net.appitiza.android.lifedrop.Views.CustomTextview
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_padding"
                android:padding="@dimen/default_semi_padding"
                android:text="@string/gender"
                android:textColor="@color/text_color"
                android:fontFamily="@font/helvatica"/>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/male"
                    android:textColor="@color/text_color" />

                <RadioButton
                    android:id="@+id/rb_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/female"
                    android:textColor="@color/text_color" />
            </RadioGroup>

            <Spinner
                android:id="@+id/spnr_blood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_padding"
                android:background="@drawable/et_bg"
                android:hint="@string/last_donated"
                android:padding="@dimen/default_semi_padding"
                android:textColorHint="@color/et_hint_color" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_padding"
                android:visibility="gone">

                <EditText
                    android:id="@+id/et_last_donation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/et_bg"
                    android:focusable="false"
                    android:hint="@string/last_donated"
                    android:imeOptions="actionSend"
                    android:inputType="none"
                    android:maxLines="1"
                    android:padding="@dimen/default_semi_padding"
                    android:textColorHint="@color/et_hint_color" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_padding">

                <EditText
                    android:id="@+id/et_medical_issue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/et_bg"
                    android:focusable="false"
                    android:hint="@string/medical_issue"
                    android:imeOptions="actionSend"
                    android:inputType="none"
                    android:maxLines="1"
                    android:padding="@dimen/default_semi_padding"
                    android:textColorHint="@color/et_hint_color" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_padding">

                <EditText
                    android:id="@+id/et_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/et_bg"
                    android:focusable="false"
                    android:hint="@string/address"
                    android:imeOptions="actionSend"
                    android:inputType="none"
                    android:padding="@dimen/default_semi_padding"
                    android:textColorHint="@color/et_hint_color" />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/default_padding">

                <CheckBox
                    android:id="@+id/cb_terms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="@dimen/default_padding" />

                <net.appitiza.android.lifedrop.Views.CustomTextview
                    android:id="@+id/tv_cb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_terms"
                    android:fontFamily="@font/monotype"/>
            </LinearLayout>

            <net.appitiza.android.lifedrop.Views.CustomTextview
                android:id="@+id/tv_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/default_semi_padding"
                android:background="@drawable/button_selector"
                android:gravity="center"
                android:padding="@dimen/default_padding"
                android:text="@string/register"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:fontFamily="@font/helvatica"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_semi_padding"
                android:padding="@dimen/default_semi_padding">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/tv_or"
                    android:background="@color/text_color" />

                <net.appitiza.android.lifedrop.Views.CustomTextview
                    android:id="@+id/tv_or"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:padding="@dimen/default_semi_padding"
                    android:text="@string/or"
                    android:textColor="@color/text_color"
                    android:textStyle="bold"
                    android:fontFamily="@font/helvatica"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_or"
                    android:background="@color/text_color" />
            </RelativeLayout>

            <net.appitiza.android.lifedrop.Views.CustomTextview
                android:id="@+id/tv_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/default_semi_padding"
                android:background="@drawable/button_selector"
                android:gravity="center"
                android:padding="@dimen/default_padding"
                android:text="@string/login"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:fontFamily="@font/helvatica"/>
        </LinearLayout>

    </ScrollView>
</LinearLayout>
